" .vimrc

" 検索
" 検索時に大文字小文字を区別しない
set ignorecase
" インクリメンタル検索
set incsearch
" 検索結果のハイライト表示
set hlsearch


" 表示
" ビープを鳴らさない
set noerrorbells
" 最終行も表示
set display=lastline
" 行末のスペースを可視化
set listchars=tab:^\ ,trail:~
" インデント幅
set shiftwidth=2
" タイトルを表示
set title
" 行番号の表示
set number
" シンタックスハイライト
syntax on
